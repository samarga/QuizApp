<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/InstructionLayoutStyle"
                android:text="@string/instructions"/>

            <TextView
                style="@style/QuestionLayoutStyle"
                android:text="@string/q1"/>

            <RadioGroup
                android:id="@+id/question1RadioGroup"
                style="@style/AnswersLayoutStyle">
                <RadioButton
                    android:id="@+id/q1answer1"
                    style="@style/StandardLayoutStyle"
                    android:text="@string/q1answer1"/>
                <RadioButton
                    android:id="@+id/q1answer2"
                    style="@style/StandardLayoutStyle"
                    android:text="@string/q1answer2"/>
                <RadioButton
                    android:id="@+id/q1answer3"
                    style="@style/StandardLayoutStyle"
                    android:text="@string/q1answer3"/>
            </RadioGroup>

            <TextView
                style="@style/QuestionLayoutStyle"
                android:text="@string/q2"/>

            <RadioGroup
                android:id="@+id/question2RadioGroup"
                style="@style/AnswersLayoutStyle">
                <RadioButton
                    android:id="@+id/q2answer1"
                    style="@style/StandardLayoutStyle"
                    android:text="@string/q2answer1"/>
                <RadioButton
                    android:id="@+id/q2answer2"
                    style="@style/StandardLayoutStyle"
                    android:text="@string/q2answer2"/>
                <RadioButton
                    android:id="@+id/q2answer3"
                    style="@style/StandardLayoutStyle"
                    android:text="@string/q2answer3"/>
            </RadioGroup>

            <TextView
                style="@style/QuestionLayoutStyle"
                android:text="@string/q3"/>

            <TextView
                style="@style/QuestionLayout2Style"
                android:text="@string/q3a"/>

            <EditText
                android:id="@+id/q3"
                style="@style/EditTextAnswersLayoutStyle"/>

            <TextView
                style="@style/QuestionLayoutStyle"
                android:text="@string/q4"/>


            <TextView
                style="@style/QuestionLayout2Style"
                android:text="@string/q4a"/>

            <EditText
                android:id="@+id/q4"
                style="@style/EditTextAnswersLayoutStyle"/>

            <TextView
                style="@style/QuestionLayoutStyle"
                android:text="@string/q5"/>

            <CheckBox
                android:id="@+id/q5chk1"
                style="@style/AnswersLayoutStyle"
                android:text="@string/q5chk1"/>

            <CheckBox
                android:id="@+id/q5chk2"
                style="@style/AnswersLayoutStyle"
                android:text="@string/q5chk2"/>

            <CheckBox
                android:id="@+id/q5chk3"
                style="@style/AnswersLayoutStyle"
                android:text="@string/q5chk3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/submitAnswers"
                    style="@style/ButtonLayoutStyle"
                    android:onClick="submitAnswers"
                    android:text="@string/submitButton"/>


            <TextView
                android:id="@+id/quizScore"
                style="@style/ScoreLayoutStyle"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>